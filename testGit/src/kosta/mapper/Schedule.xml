<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="kosta.mapper.ScheduleMapper">
	<cache />
	
	<insert id="insertSchedule" parameterType="schedule">
		insert into schedule(					
		s_no, s_title, s_contents, s_startday, s_finishday, s_date
		)values(s_no_seq.nextval,#{s_title},#{s_contents},#{s_startday},#{s_finishday},sysdate)
	</insert>
	
	<select id="listSchedule" resultType="schedule">
		select * from schedule
	</select>
	
	<select id="detailSchedule" parameterType="int" resultType="schedule">
		select * from schedule
				where s_no = #{s_no}
	</select>
	
	<delete id="deleteSchedule" parameterType="int">
		delete from schedule
			where s_no = #{s_no}
	</delete>
	
	<update id="updateSchedule" parameterType="int">
		update schedule set s_title=#{s_title} ,s_contents= #{s_contents} 
			where s_no = #{s_no}
	</update>
	
	<select id="countSchedule" resultType="int">
		select count(*) from schedule
	</select>
	
</mapper>















